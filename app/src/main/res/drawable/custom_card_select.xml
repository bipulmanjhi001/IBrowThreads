<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <inset android:insetLeft="0dp" android:insetRight="0dp">
            <shape android:shape="oval">
                <solid android:color="@color/colorAccentTransparent" />
                <stroke android:width="@dimen/_2sdp" android:color="@color/colorAccent" />
                <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            </shape>
        </inset>
    </item>

    <item>
        <inset android:insetLeft="0dp" android:insetRight="0dp">
            <shape android:shape="oval">
                <solid android:color="@color/colorAccent" />
                <stroke android:width="@dimen/_2sdp" android:color="@color/colorAccent" />
                <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            </shape>
        </inset>
    </item>
</selector>